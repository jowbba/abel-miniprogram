.type {
  width: 100%;
  height: 48px;
  position: relative;
  background: #009788;
}

.tab {
  height: 48px;
  line-height: 48px;
  float: left;
  position: relative;
  opacity: 0.7;
  overflow: hidden;
}

.tab > view:nth-child(1) {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 13px;
  color: #fff;
}

.select {
  opacity: 1;
}

.indicator {
  position: absolute;
  bottom: 0px;
  width: 50%;
  height: 2px;
  background: rgb(225, 0, 80);
  transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
}

.ripple {
  color: #fff;
  width: 200%;
  position: absolute;
  left: 0px;
  top: 0px;
  opacity: .3;
}

.ripple view {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: currentColor;
}

@keyframes ripple
{
0%   {transform: scale(0)}
100%  {transform: scale(1)}
/* 100% {display: none} */
}

